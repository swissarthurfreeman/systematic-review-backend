###
GET {{host}}/users
Content-Type: application/json
Accept: application/json

###
POST {{host}}/users
Content-Type: application/json
Accept: application/json

{
    "uuid": "{{test_uuid}}",
    "username": "brody",
    "email":"brody@co.uk"
}

###
POST {{host}}/users/{{test_uuid}}/searches
Content-Type: application/json
Accept: application/json

{
    "user_uuid": "{{test_uuid}}",
    "query": "HIV OR NOT WUHAN"
}

